{% extends 'base.html.twig' %}

{% block title %}Reservationmahassen{% endblock %}

{% block body %}
    <h1>Reservation Mahassen</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservationmahassen.id }}</td>
            </tr>
            <tr>
                <th>Nbr_personne</th>
                <td>{{ reservationmahassen.nbrPersonne }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ reservationmahassen.startDate ? reservationmahassen.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ reservationmahassen.endDate ? reservationmahassen.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ reservationmahassen.description }}</td>
            </tr>
        </tbody>
    </table>
    <div>
        <a href="{{ path('reservationmahassen_index') }}"><button class="btn btn-light" >Voir La Liste</button></a> {{ include('reservationmahassen/_delete_form.html.twig') }}
    </div>
    <style>
      h1{
         padding: 5%;
         font-family: 'Playfair Display', serif;
         color: rgb(252, 252, 250);
         font-size:35px;
         text-shadow: 3px 4px 0 rgba(14, 12, 12, 0.2); 
      }
    </style>
{% endblock %}
