{% extends 'base.html.twig' %}

{% block title %}Reservation Mahassen{% endblock %}

{% block body %}
    <h2>Réservation Mahassen </h2>

    <table class="table">
        <thead>
            <tr>
                
                <th>Votre Nom</th>
                <th>Service</th>
                <th>Début_date</th>
                <th>Fin_date</th>
                <th>Nbr_personne</th>
                <th>Description</th>
                <th>Edit</th>
                <th>Annuler</th>
                <th>Confirmer</th>
                
            </tr>
        </thead>
        <tbody>
        {% for reservationmahassen in reservationmahassens %}
            <tr>
                
                <td>{{ reservationmahassen.User }}</td>
                <td>{{ reservationmahassen.servicemahassen }}</td>
                <td>{{ reservationmahassen.startDate ? reservationmahassen.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservationmahassen.endDate ? reservationmahassen.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservationmahassen.nbrPersonne }}</td>
                <td>{{ reservationmahassen.description }}</td>
                <td><a style="color:rgb(14, 13, 13);" href="{{ path('reservationmahassen_edit', {'id': reservationmahassen.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
  <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
</svg></td>
                <td><a style="color:rgb(14, 13, 13);" href="{{ path('reservationmahassen_delete', {'id': reservationmahassen.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M13.854 2.146a.5.5 0 0 1 0 .708l-11 11a.5.5 0 0 1-.708-.708l11-11a.5.5 0 0 1 .708 0Z"/>
  <path fill-rule="evenodd" d="M2.146 2.146a.5.5 0 0 0 0 .708l11 11a.5.5 0 0 0 .708-.708l-11-11a.5.5 0 0 0-.708 0Z"/>
</svg></a></td>
                <td><a style="color:rgb(14, 13, 13);" href="{{ path('reservationmahassen_show', {'id': reservationmahassen.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
  <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z"/>
</svg></a></td>
              
            </tr>
        {% else %}
            <tr>
                <td colspan="7">reservation vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reservationmahassen_new') }}"><button class="btn btn-light">Nouveau Réservation</button></a>
    <style>
      h2{
         padding: 5%;
         font-family: 'Playfair Display', serif;
         color: rgb(252, 252, 250);
         font-size:35px;
         text-shadow: 3px 4px 0 rgba(14, 12, 12, 0.2); 
      }
      button{
          margin-bottom:100px;
      }
    </style>
{% endblock %}
