{% extends '@EasyAdmin/layout.html.twig' %}

{% block content %}

 <header>
      <nav>
        <h3 id="logo">peelbrown</h3>
        <img class="hamburger" src="https://www.flaticon.com/svg/vstatic/svg/130/130918.svg?token=exp=1618243211~hmac=be4b486e1f3659d35e67e1dccf8c05c5" alt="hamburger menu" />
      </nav>
      <section>
        <div class="car">
          <img src="https://images.unsplash.com/photo-1600016326108-40b24ee22cd3?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=2250&q=80" alt="mini-cooper car" />
          <h1 class="headline">Keep it mini</h1>
        </div>
      </section>
    </header>
    <div class="slider"></div>
<style>
  * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: sans-serif;
}

.slider {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: linear-gradient(to left, #ba7453, #d1a984);
  z-index: -1;
}

nav {
  display: grid;
  grid-template-columns: 10% 1fr 1fr 10%;
  min-height: 10vh;
  color: #fff;
  align-items: center;
}

#logo {
  grid-column: 2/3;
  font-size: 24px;
  text-transform: uppercase;
  font-weight: 300;
}

.hamburger {
  width: 30px;
  justify-self: end;
}

section {
  display: flex;
  height: 80vh;
  justify-content: center;
  align-items: center;
}

.car {
  height: 60%;
  width: 100%;
  position: relative;
}

.car::after {
  content: "";
  background-color: #000;
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0.3;
}

.car img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: 50% 85%;
  /* margin-top: 100px; */
}

.headline {
  position: absolute;
  top: 70%;
  left: 0%;
  font-size: 100px;
  transform: translate(-20%, -70%);
  color: #fff;
  z-index: 3;
}

</style>
<script>
     const car = document.querySelector(".car");
const slider = document.querySelector(".slider");
const logo = document.querySelector("#logo");
const hamburger = document.querySelector(".hamburger");
const headline = document.querySelector(".headline");

const tl = new TimelineMax();

tl.fromTo(
  car,
  0.75,
  { height: "0%" },
  { height: "80%", ease: Power2.easeInOut }
)
  .fromTo(car, 1.2, { width: "100%" }, { width: "80%", ease: Power2.easeInOut })
  .fromTo(
    slider,
    1.2,
    { x: "-100%" },
    { x: "0%", ease: Power2.easeInOut },
    "-=1.2"
  )
  .fromTo(headline, 1, { opacity: 0 }, { opacity: 1 })
  .fromTo(logo, 0.5, { opacity: 0, x: 30 }, { opacity: 1, x: 0 }, "-=1")
  .fromTo(hamburger, 0.5, { opacity: 0, x: 30 }, { opacity: 1, x: 0 }, "-=1");


</script>
{% endblock %}